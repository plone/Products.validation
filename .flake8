[flake8]
doctests = 1
ignore =
    # black takes care of line length
    E501,
    # black takes care of where to break lines
    W503,
    # black takes care of spaces within slicing (list[:])
    E203,
    # black takes care of spaces after commas
    E231,
per-file-ignores =
    Products/validation/__init__.py:F401
    Products/validation/interfaces/__init__.py:F401
    Products/validation/validators/validator.py:F401

